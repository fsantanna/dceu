;; is', is-not'

val is? = func (v1,v2) {
    if (v1 == v2) {
        true
    } else {
        if (type(v2) /= :tag) {
            false
        } else {
            if (type(v1) == v2) {
                true
            } else {
                if tags(v1,v2) {
                    true
                } else {
                    false
                }
            }
        }
    }
}

func is-not' (v1,v2) {
    not is'(v1,v2)
}

;; LOGICAL

val {{&&}} = func (v1, v2) {
    if v1 {
        v2
    } else {
        false
    }
}

val {{||}} = func (v1, v2) {
    if v1 {
        true
    } else {
        v2
    }
}

;; ARITHMETIC

val {{+}} = func (v1, v2) {
    if (type(v1) /= :number) || (type(v2) /= :number) {
        error(:error)
    } else {
        `:number ($v1.Number + $v2.Number)`
    }
}

val {{-}} = func (v1, v2) {
    val t1 = type(v1)
    val t2 = type(v2)
    if (t1 == :number) && (t2 == :nil) {
        `:number (- $v1.Number)`
    } else {
        if (t1 /= :number) || (t2 /= :number) {
            error(:error)
        } else {
            `:number ($v1.Number - $v2.Number)`
        }
    }
}

