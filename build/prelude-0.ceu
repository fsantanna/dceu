    if type(v) == :pointer {
        var i = 0
        val n = `:number strlen($v.Pointer)`
        var str = #[]
        xloop {
            xbreak if (i == n)
            set str[#str] = `:char ((char*)$v.Pointer)[(int)$i.Number]`
            set i = i + 1
        }
        drop(str)
    } else {
        if type(v) == :number {
            ```
            static char str[255];
            snprintf(str, 255, "%g", $v.Number);
            ```
            to-string(`:pointer str`)
        } else {
            v   ;; TODO
        }
    }
}

val to-number = func (v) {
    if type(v) == :tag {
        `:number $v.Tag`
    } else {
        if type(v) == :vector {
            if #v > 0 {
                if type(v[0]) == :char {
                    `:number atoi($v.Dyn->Vector.buf)`
                } else {
                    v   ;; TODO
                }
            } else {
                v       ;; TODO
            }
        } else {
            v           ;; TODO
        }
    }
}

val to-tag = func (v) {
    if type(v) == :string {
        string-to-tag(v)
    } else {
        v   ;; TODO
    }
}
