;; MATH: sin,cos,floor , min,max,between
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

data :Math = [
    PI, sin, cos,
    floor, ceil, round,
    min, max, between,
]

val math :Math = group {
    val x-PI = `:number M_PI`
    func x-sin (v) {
        `:number sin($v.Number)`
    }
    func x-cos (v) {
        `:number cos($v.Number)`
    }

    func x-floor (v) {
        `:number floor($v.Number)`
    }
    func x-ceil (v) {
        `:number ceil($v.Number)`
    }
    func x-round (v) {
        `:number round($v.Number)`
    }

    func x-min (v1, v2) {
        ((v1 < v2) and v1) or v2
    }
    func x-max (v1, v2) {
        ((v1 > v2) and v1) or v2
    }
    func x-between (min, v, max) {
        x-max(min, x-min(v, max))
    }

    [x-PI,x-sin,x-cos , x-floor,x-ceil,x-round , x-min,x-max,x-between]
}

