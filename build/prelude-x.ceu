func type-static? (v) {
    to-number(v) < `:number CEU_VALUE_DYNAMIC`
}
func type-dynamic? (v) {
    to-number(v) > `:number CEU_VALUE_DYNAMIC`
}

;; COPY

func :rec copy (v) {
    ifs type(v) {
        {{type-static?}} {
            v
        }
        == :tuple {
            val ret = tuple(#v)
            loop i in {0 => #v{ {
                set ret[i] = copy(v[i])
            }
            ret
        }
        else {
            error(:TODO)
        }
    }
}

func to-vector (col, tp) {
    val ret = #[]
    loop v in to-iter(col,tp) {
        set ret[+] = v
    }
    ret
}

;;;
func to-tasks (...) {
    val ret = #[]
    val args = ...
    loop v in to-iter(args) {
        ifs v {
            is? :exe-task {
                set ret[+] = v
            }
            is? :tasks {
                loop i in v {
                    set ret[+] = i
                }
            }
        }
    }
    ret
}
