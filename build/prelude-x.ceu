;; MISC: tag-or, next, create-resume, copy, assert
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

func tag-or (t1,t2) {
    assert(type(t1) == :tag)
    assert(type(t2) == :tag)
    `:tag $t1.Tag | $t2.Tag`
}

func next (v, x) {
    match v {
        :exe-coro => resume v(x)
        :tasks    => next-tasks(v, x)
        :dict     => next-dict(v, x)
        :Iterator => v.f(v, x)
        else      => error(:error)
    }
}

func create-resume (CO, x, y, z) {
    val' co = coroutine(CO)         ;; TODO: where
    val v = resume co(x,y,z)
    assert(v == nil)
    co
}

func copy (v) {
    match type(v) {
        {{static?}} {
            v
        }
        :tuple {
            val ret = tuple(#v)
            loop i in {0 => #v{ {
                set ret[i] = copy(v[i])
            }
            drop(ret)
        }
        :vector {
            val ret = #[]
            loop i in {0 => #v{ {
                set ret[i] = copy(v[i])
            }
            drop(ret)
        }
        :dict {
            val ret = @[]
            var k = nil
            loop {
                set k = next-dict(v, k)
                until (k == nil)
                set ret[copy(k)] = copy(v[k])
            }
            drop(ret)
        }
        else {
            error(:TODO)
        }
    }
}
