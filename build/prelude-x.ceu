func random-seed (n) {
    if n {
        `srand($n.Number);`
    } else {
        `srand(time(NULL));`
    }
}

func random-next () {
    `:number rand()`
}

func math-sin (v) {
    `:number sin($v.Number)`
}

func math-cos (v) {
    `:number cos($v.Number)`
}

func math-floor (v) {
    `:number floor($v.Number)`
}
