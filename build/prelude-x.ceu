;; IS, IS-NOT, === =/=
;; IN, IN-NOT

func :rec {{===}} (v1,v2) {
    val t1 = type(v1)
    val t2 = type(v2)
    ifs {
        v1 == v2 => true
        t1 /= t2 => false
        (t1==:tuple) or (t1==:vector) => equals-tuple-vector(v1,v2)
        t1 == :dict => contains-dict?(v1,v2) and contains-dict?(v2,v1)
        else => false
    } where {
        func equals-tuple-vector (v1', v2') {
            (#v1' == #v2') and not (
                loop x in to-iter(v1',:all) {
                    while (v2'[x[0]] === x[1])
                }
            )
        }
        func contains-dict? (v1', v2') {
            not (
                loop x in to-iter(v1',:all) {
                    while (v2'[x[0]] === x[1])
                }
            )
        }
     }
}

func :rec {{=/=}} (v1,v2) {
    not (v1 === v2)
}

func is' (v1,v2) {
    ifs {
        (v1 == v2)          => true
        (type(v2) =/= :tag) => false
        (type(v1) === v2)   => true
        tags(v1,v2)         => true
        else => false
    }
}

func is-not' (v1,v2) {
    not is'(v1,v2)
}

func in' (v, xs) {
    loop x in to-iter(xs) {
       until (x == v)
    }
}

func in-not' (v, xs) {
    not in'(v,xs)
}

