;; MIN, MAX, BETWEEN
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

func min (v1, v2) {
    ((v1 < v2) and v1) or v2
}

func max (v1, v2) {
    ((v1 > v2) and v1) or v2
}

func between (min_max, v) {
    max(min_max.0, min(min_max.1, v))
}

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; ITERATORS
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

data :Iterator = [f,s,i]

func iter-tuple (it :Iterator) {
    val i = it.i
    if i >= #it.s {
        nil
    } else {
        set it.i = i + 1
        move([i, it.s[i]])
    }
}

func iter-dict (it :Iterator) {
    val k = next(it.s,it.i)
    if k == nil {
        nil
    } else {
        set it.i = k
        move([k, it.s[k]])
    }
}

func iter-coro (it :Iterator) {
    val co = it.s
    val v = resume co()
    ((status(co) /= :terminated) and v) or nil
}

func iter (v) {
    ifs v {
        is? :tuple  -> :Iterator [iter-tuple, v, 0]
        is? :vector -> :Iterator [iter-tuple, v, 0]
        is? :dict   -> :Iterator [iter-dict,  v, nil]
        is? :func   -> :Iterator [v]
        is? :x-coro -> :Iterator [iter-coro,  v]
    }
}

func in' (v, xs) {
    val ok = loop in iter(xs), x {
    } until x.1 == v
    not (not ok)
}

