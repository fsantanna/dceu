do {
    var i = 1
    loop {                  ;; infinite loop
        println(i)          ;; --> 1,2,...,10
        while i < 10        ;; immediate termination
        set i = i + 1
    }
}

loop in {0 => 3{ {
    println(it)     ;; --> 0,1,2
}

loop v in }3 => 0} :step -1 {
    println(v)      ;; --> 2,1,0
}


loop i {
    println(i)      ;; --> 0,1,2,...
}

do {
    var i = 0
    loop {                  ;; infinite loop
        set i = i + 1
        if (i % 2) == 0 {
            skip            ;; jump back
        }
        println(i)          ;; --> 1,3,5,...
    }
}
